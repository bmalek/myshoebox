<!DOCTYPE html>
<html>
<head>
  <title>My Shoe Box</title>
  <%= stylesheet_link_tag  "styles" %>
  <%= javascript_include_tag "application" %>  
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>	
	   <div id="header">
            <div class="container">
                <div class="branding">
                    <h1 class="logo">
                    	<%= image_tag "shoe-box-hi.png", :size => "42x40" %>	
                        <%= link_to 'My Shoebox', root_url %><br />
                        <p class="slogan">Your Accountant Wants You Organized!</p>                        
                    </h1>
                </div>
                
                <div class="clear"></div>
            </div>
            <%= render "layouts/application_top_menu" %>
        </div>        
        <div id="main">
            <div class="container">
            	<p id="email"><%= current_user.email if current_user %></p>
            	
            	<div class="title">
                    <h3><%= yield(:h3) %></h3>                                   
                </div>
            	                                                                                   
                <div class="content">
                    <div class="page">
                        <div class="entry">
                            <div class="thumbnail"></div>
                            
							<p class="alert"><%= alert %></p>
							<%= yield %>	                        
                        <div class="clear"></div>
                        </div>                    
                    </div>                
				</div>        

				<div class="sidebar">
            		<div class="ad">
            			<%= image_tag "organizer.jpg", :size => "363x350" %>                		
                		
                	</div>
                </div>                
                
                <div class="clear"></div>
       		</div>                             
   		</div>        
        <%= render "layouts/application_footer"%>		

</body>
</html>

